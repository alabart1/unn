<nav class="navbar navbar-dark bg-dark">
  <form class="form-inline">
    <a href="/senso" class="btn btn-outline-success" type="button">Monitorizar Sensores</a>
    <a href="/active" class="btn btn-outline-success" type="button"> Control Manual</a>
    <a href="/notes/add" class="btn btn-outline-success" type="button"> AGREGAR Horario/RIEGO</a>
    <a class="display-4 text-success" id="hora" href="#">
    </a><i class="display-4 alert alert-success bg-dark fas fa-user-clock"></i>
  </form>
  <i class="display-4  alert-success bg-dark fab fa-node"></i>
</nav>
<div class="row p-3">

  {{#each notes}}

  <div class="col-md-3 p-3">
    <div class="card text-white bg-dark mb-3" style="width: 15rem;">
      <i class="far fa-clipboar"></i>
      <div class="card-body">
        <h5 class="card-title text-success text-center">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        <div class="form-group">Horario:{{hora}}hrs : {{minuto}}min <i class=" far fa-clock"></i></div>
        <div class="form-group"> Duracion: <a href="#" class=" card-text mx-auto">{{duracion}} Min </a> <i
            class="fas fa-hourglass-half"></i>
        </div>
        <div class="card-body row">
          <a href="/notes/edit/{{_id}}" class="btn btn-outline-success  btn-lg"><i class="far fa-edit "></i> </a>
          <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn btn-outline-danger  btn-lg" type="submmit"><i class="far fa-trash-alt"></i></button>
          </form>
        </div>
      </div>
    </div>
  </div>

  {{ else}}
  <div class=" container row card mx-auto p-4" style="width: 30rem;">
    <div class="col s12 m7">
      <div class="card">
        <div class="card-image">
          <span class="card-title text-warning" style="font-size: 48px; color: DodgerYellow;"><i
              class="fas fa-exclamation-triangle"></i> AVISO!!!</span>
        </div>
        <h1>Hola {{user.name}}</h1>
        <div class="card-content">
          <p>NO EXISTE NOTAS REGISTRADAS</p>
        </div>
        <div class="card-action">
          <a class="btn btn-outline-success   btn-block" href="/notes/add">Crea Una...</a>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<script>

  setInterval(() => {
    var Hora = new Date()
    var H = Hora.getHours()
    var M = Hora.getMinutes()
    var S = Hora.getSeconds()
    let hora = document.getElementById("hora")
    hora.innerHTML = `${H}:${M}:${S}`
  }, 1000)
</script>